@using PhotoManager.Model.ViewModels
@model int
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2> You don`t have any photos yet!</h2>
@Html.ActionLink("Add new photo", "PhotoUpload", "Photo", new { albumId = Model }, new { @class = "btn btn-default label-block" })
@if (ViewBag.PhotosCount != 0)
{
    @Html.ActionLink("Add existing photo", "AddExistingPhotosToAnotherAlbum", "Album", new { albumId = Model }, new { @class = "btn btn-default label-block" })
}
